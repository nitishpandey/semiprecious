<CFQUERY DATASOURCE="gemssql" NAME="groups">Select displaytitle, category, description, linkto, imageid1,imageid2, imageid3, seq from contenthome where domain='#cgi.server_name#'	order by seq</CFQUERY><table>	<tr><cfset col=0><cfoutput query=groups><cfset col=col+1 /><td valign="top"><table border=0 cellpadding="0" cellspacing="0">    <tr><!---   <td colspan="2" valign="bottom"><a href="#linkto#" style="text-decoration:none"><span style='font-size:36.0pt;font-family:"Palatino Linotype","serif"'>#Ucase(Left(displaytitle,1))#</span><u><span style='font-size:14.0pt;font-family:"Palatino Linotype","serif";color:black'>#Ucase(Right(displaytitle,Len(displaytitle)-1))#</span></u> </a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="#linkto#"><img src=<cfif imageid1 contains 'http'>"#imageid1#"<cfelse>"images/#category#/thumb/#imageid1#.jpg"</cfif>  border="0" width=60></a></td>---> <td colspan="2" valign="bottom"> 	<a href="#linkto#"> 		<strong> 			<font size="5" face="Bradley Hand ITC">#displaytitle#</font> 		</strong> 	</a> 	<a href="#linkto#"> 		<img src=<cfif imageid1 contains 'http'>"#imageid1#"<cfelse>"images/#category#/thumb/#imageid1#.jpg"</cfif>  border="0" width="60" /> 		</a></td>    </tr>    <tr>      <cfset mySpaceFreeVariable = ReReplace(description, "[[:space:]]","","ALL")>      <cfif  mySpaceFreeVariable neq ""  and mySpaceFreeVariable neq " ">        <td valign="top" ><cfif imageid2 neq ""><a href="#linkto#"><img src=<cfif imageid2 contains 'http'>"#imageid2#"<cfelse>"images/#category#/thumb/#imageid2#.jpg"</cfif>  width=100 border="0"></a></cfif><cfif imageid3 neq ""><a href="#linkto#"><img src=<cfif imageid3 contains 'http'>"#imageid3#"<cfelse>"images/#category#/thumb/#imageid3#.jpg"</cfif>  border="0"></a></cfif></td></tr><tr>        <td style="padding-left:5px" valign="top"><span style='font-size:10pt;font-family:"Palatino Linotype","serif";color:black'> #description# </span> </td>      <cfelse>        <td valign="top" colspan="2" align="center" ><a href="#linkto#"><img src=<cfif imageid1 contains 'http'>"#imageid1#"<cfelse>"images/#category#/thumb/#imageid1#.jpg"</cfif> width=100 border="0"></a></td>      </cfif>    </tr>    </table>    </td>    	<cfif col is 2>    	<cfset col=0 />    	</tr><tr>    	</cfif>  </cfoutput>    </tr>    </table>